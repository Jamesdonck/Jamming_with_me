<div class="navbar navbar-expand-sm navbar-light navbar-lewagon">
  <div class="container">
    <%= link_to root_path, class: "navbar-brand" do %>
      <img src="https://www.jams-hotel.com/wp-content/uploads/2019/06/jams_logo_black_rgb.png">
    <% end %>

    <div class="location">
        <%= simple_form_for :search, method: :get do |f| %>
        <%= f.input :city, placeholder: "Where to Jam?", label: false %>
        <%= f.button :button , {class: 'button_postfix'} do %><i class="fas fa-search"></i><% end %>
        <% end %>
      </div>

    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
    </button>


      <div class="collapse navbar-collapse" id="navbarSupportedContent">
        <ul class="navbar-nav mr-auto">
          <% if user_signed_in? %>
            <li class="nav-item">
              <%=link_to new_jam_path, class:"new_jam_btn nav-link" do %>
                <p><i class="fas fa-plus"></i> Jam</p>
              <% end %>
            </li>
            <li class="nav-item active">
              <%= link_to "Home", "#", class: "nav-link" %>
            </li>
            <li class="nav-item">
              <%= link_to "Messages", "#", class: "nav-link" %>
            </li>
            <li class="nav-item dropdown">
              <img src="https://emssa.org.za/wp-content/uploads/2017/08/profile-hipster.jpg" class="avatar dropdown-toggle" id="navbarDropdown" data-toggle="dropdown">
              <div class="dropdown-menu dropdown-menu-right" aria-labelledby="navbarDropdown">
                <%= link_to "Action", "#", class: "dropdown-item" %>
                <%= link_to "Another action", "#", class: "dropdown-item" %>
                <%= link_to "Log out", destroy_user_session_path, method: :delete, class: "dropdown-item" %>
              </div>
            </li>
          <% else %>
            <li class="nav-item">
              <%= link_to "Login", new_user_session_path, class: "nav-link" %>
            </li>
          <% end %>
        </ul>
      </div>
    </div>
  </div>
</div>
