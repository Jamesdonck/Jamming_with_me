<nav class="navbar navbar-expand-lg navbar-light bg-light navbar-lewagon">
   <div class="logo">
      <%= link_to root_path, class: "navbar-brand" do %>
      <img src="https://www.jams-hotel.com/wp-content/uploads/2019/06/jams_logo_black_rgb.png">
    <% end %>
   </div>


  <div class="location">
        <%= simple_form_for :search, method: :get do |f| %>
        <%= f.input :city, placeholder: "Where to Jam?", label: false %>
        <%= f.button :button , {class: 'button_postfix'} do %><i class="fas fa-search"></i><% end %>
        <% end %>
  </div>

  <% unless current_page?(root_path) %>
    <% coordinates = Geocoder.search('lisbon').first.coordinates %>
    <div id="city-name" data-lat="<%= coordinates[0] %>" data-lng="<%= coordinates[1] %>">
        <h1><%= "LISBON" %></h1>
    </div>
  <% end %>

  <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
    <span class="navbar-toggler-icon"></span>
  </button>

  <div class="collapse navbar-collapse" id="navbarSupportedContent">
        <ul class="navbar-nav">
          <% if user_signed_in? %>
            <li class="nav-item">
              <%=link_to new_jam_path, class:"new_jam_btn nav-link" do %>
                <p><i class="fas fa-plus"></i> Jam</p>
              <% end %>
            </li>
            <li class="nav-item active">
              <%= link_to "Home", root_path, class: "nav-link mr-2" %>
            </li>
            <li class="nav-item dropdown">
              <% if current_user.avatar %>
                <div class="avatar dropdown-toggle" id="navbarDropdown" data-toggle="dropdown">
                  <%= cl_image_tag current_user.avatar.key, class: 'avatar__image' %>
                </div>
              <% else %>
                <img src="https://app.agendaconsulta.com/dist/img/default-profile-img.jpg" class="avatar dropdown-toggle" id="navbarDropdown" data-toggle="dropdown">
              <% end %>
              <div class="dropdown-menu dropdown-menu-right" aria-labelledby="navbarDropdown">
                <%= link_to "Profile", user_path(current_user), class: "dropdown-item" %>
                <%= link_to "Log out", destroy_user_session_path, method: :delete, class: "dropdown-item" %>
              </div>
            </li>
          <% else %>
            <li class="nav-item">
              <%= link_to "Login", new_user_session_path, class: "nav-link" %>
            </li>
          <% end %>
        </ul>
  </div>
</nav>
